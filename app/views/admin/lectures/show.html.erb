<% present @lecture do |lecture_presenter| %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card rounded-0 shadow">
          <div class="card-body">
            <h4 class="text-muted mb-3 card-title"><%= @lecture.title %></h4>
            <hr>
            <p class="card-text">Program : <%= @lecture.program.name.titleize %></p>
            <p class="card-text">Date : <%= lecture_presenter.start_date %></p>
            <p class="card-text">From : <%= lecture_presenter.start_time %> - <%= lecture_presenter.end_time %></p>
            <%= link_to "Edit", edit_admin_lecture_path(@lecture), class: "btn btn-success rounded-0 btn" %>
            <%= link_to "Delete", admin_lecture_path(@lecture), class: "btn btn-danger rounded-0 btn", method: "delete", data: { confirm: 'Are you sure?' } %>
            <%= link_to "Back to List", admin_program_lectures_path(@lecture.program), class: "btn btn-outline-success rounded-0" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
