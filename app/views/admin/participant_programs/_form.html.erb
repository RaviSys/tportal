<%= form_for [:admin, participant_program], html: { class: "user" } do |f| %>
  
  <%= render "partials/form_errors", object: participant_program %>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :program %>
      <%= f.select :program_id, options_for_select(program_list, selected: participant_program.program_id), { prompt: "Select a program" }, { class: "form-control rounded-0" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :participant %>
      <%= f.select :participant_id, options_for_select(participant_list, selected: participant_program.participant_id), { prompt: "Select a participant" }, { class: "form-control rounded-0" } %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary shadow rounded-0" %>
    <%= link_to 'Cancel', admin_participant_programs_path, class: "btn btn-outline-secondary rounded-0" %>
  </div>

<% end %>
