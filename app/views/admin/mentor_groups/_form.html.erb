<%= form_for [:admin, mentor_group], html: { class: "user" } do |f| %>
  
  <%= render "partials/form_errors", object: mentor_group %>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control rounded-0" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary shadow rounded-0" %>
    <%= link_to 'Cancel', admin_mentor_groups_path, class: "btn btn-outline-secondary rounded-0" %>
  </div>

<% end %>
