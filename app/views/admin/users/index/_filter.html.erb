<div class="card rounded-0 mt-2 mb-5">
  <div class="card-body">
    <h3 class="mb-4">Filter Users</h3>
    <%= search_form_for @q, url: :admin_users do |form| %>
      <div class="form-group row">
        <div class="col-md-8">
          <%= form.text_field :username_cont, class: "form-control rounded-0", placeholder: "Search by first name, last name or full name" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= form.text_field :contact_cont, class: "form-control rounded-0", placeholder: "Search by contact" %>
        </div>
        <div class="col-md-4">
          <%= form.text_field :role_cont, class: "form-control rounded-0", placeholder: "Search by role" %>
        </div>
        <div class="col-md-4">
          <%= form.text_field :email_cont, class: "form-control rounded-0", placeholder: "Search by email" %>
        </div>
      </div>
      <%= submit_tag "Search", class: "btn btn-primary rounded-0" %>
      <%= link_to "Reset", admin_users_path, class: "btn btn-secondary rounded-0" %>
    <% end %>
  </div>
</div>
