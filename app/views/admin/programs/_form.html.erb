<%= form_for [:admin, program], html: { class: "program" } do |f| %>
  
  <%= render "partials/form_errors", object: program %>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control rounded-0" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :start_date %>
      <%= f.text_field :to_be_start_from, class: "form-control rounded-0", id: "program_start_date" %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.text_field :to_be_end_upto, class: "form-control rounded-0", id: "program_end_date" %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label :about_this_program %>
      <%= f.text_area :description, class: "form-control rounded-0", rows: "6" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary shadow rounded-0" %>
    <%= link_to 'Cancel', admin_programs_path, class: "btn btn-outline-secondary rounded-0" %>
  </div>

<% end %>

<script type="text/javascript">
  $(function () {
    $('#program_start_date').datetimepicker({
      format: 'DD-MM-YYYY'
    });
    $('#program_end_date').datetimepicker({
      format: 'DD-MM-YYYY'
    });
  });
</script>