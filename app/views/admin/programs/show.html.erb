<% present @program do |program_presenter| %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card shadow rounded-0">
          <div class="card-body">
            <h4 class="text-site font-weight-bold"><%= @program.name %></h4>
            <hr>
            <p class="lead-site"><%= @program.description %></p>
            <small class="badge badge-primary"><%= program_presenter.start_date %></small><br>
            <small class="badge badge-primary"><%= program_presenter.end_date %></small>
            <div class="mt-3 mb-4">
              <%= link_to "Edit", edit_admin_program_path(@program), class: "btn btn-success rounded-0" %>
              <%= link_to "Add Sessions", add_lectures_admin_program_path(@program), class: "btn btn-outline-success rounded-0" %>
              <%= link_to "Back to List", admin_programs_path, class: "btn btn-outline-success rounded-0" %>
            </div>
            <% if @program.lectures.present? %>
              <div class="mb-4">
                <%= link_to admin_program_lectures_path(@program), class: "btn btn-outline-primary rounded-0" do %>
                  View All Lectures <span class="badge badge-primary"><%= @program.lectures.count %></span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% if @program.tutors.present? %>
        <div class="col-md-6">
          <div class="card shadow rounded-0 mt-5 mb-5">
            <div class="card-body">
              <h4 class="text-site text-center">Tutors</h4>
              <ul class="list-group">
                <% @program.tutors.each do |tutor| %>
                  <%= link_to admin_user_path(tutor), class: "list-group-item list-group-item-action" do %>
                    <%= image_tag 'user.png', width: "35" %> 
                    <span class="ml-3 font-weight-bold"><%= tutor.name %></span>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <% if @program.participants.present? %>
        <div class="col-md-6">
          <div class="card shadow rounded-0 mt-5 mb-5">
            <div class="card-body">
              <h4 class="text-site text-center">Participants</h4>
              <ul class="list-group">
                <% @program.participants.each do |participant| %>
                  <%= link_to admin_user_path(participant), class: "list-group-item list-group-item-action" do %>
                    <%= image_tag 'user.png', width: "35" %> 
                    <span class="ml-3 font-weight-bold"><%= participant.name %></span>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
