<div class="card rounded-0">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h3 class="mb-4">Listing Programs</h3>
      </div>
      <div class="col-md-6">
        <%= link_to 'New program', new_admin_program_path, class: "btn btn-primary rounded-0 float-right" %>
      </div>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @programs.each do |program| %>
          <tr>
            <td><%= link_to program.name, admin_program_path(program) %></td>
            <td>
              <%= link_to 'Show', admin_program_path(program), class: "btn btn-primary btn-sm rounded-0" %>
              <%= link_to 'Edit', edit_admin_program_path(program),class: "btn btn-secondary btn-sm rounded-0" %>
              <%= link_to 'Destroy', admin_program_path(program), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm rounded-0" %>  
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @programs %>
  </div>
</div>
