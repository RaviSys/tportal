<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow rounded-0">
        <div class="card-body">
          <h4 class="text-site font-weight-bold"><%= @program.name %></h4>
          <%= form_for :lectures, url: :create_lectures_admin_program, method: :post do |f| %>
            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :begin_time %>
                <%= f.text_field :begin_time, class: "form-control rounded-0", id: "lecture_begin_time" %>
              </div>
              <div class="col-md-6">
                <%= f.label :end_time %>
                <%= f.text_field :end_time, class: "form-control rounded-0", id: "lecture_end_time" %>
              </div>
            </div>
            <div class="form-group row">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#lecture_begin_time').datetimepicker({
      format: 'HH:mm'
    });
    $('#lecture_end_time').datetimepicker({
      format: 'HH:mm'
    });
  });
</script>
